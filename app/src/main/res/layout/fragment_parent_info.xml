<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.osamakhalid.schoolsystem.Fragments.ParentInfoFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parent Information"
                android:textSize="30dp"
                android:layout_gravity="center_horizontal"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/u1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="Guardian Name"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/name_user_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="95dp"
                    android:layout_toEndOf="@+id/u1"
                    android:text="Hasan Khalid "
                    android:textSize="18dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/u2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Mother's name"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"
                    />
                <TextView
                    android:id="@+id/user_roll_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Shazia Khalid"
                    android:textSize="18dp"
                    android:layout_toEndOf="@+id/u2"
                    android:layout_marginLeft="45dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/u3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Father's profession"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true"
                    android:textSize="18dp"
                    />
                <TextView
                    android:id="@+id/user_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CEO"
                    android:textSize="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@+id/u3"
                    android:layout_marginLeft="85dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/u4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true"
                    android:textSize="18dp"
                    />
                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="osamak063@gmail.com"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@+id/u4"
                    android:textSize="18dp"
                    android:layout_marginLeft="98dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/u5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true"
                    android:textSize="18dp"
                    />
                <TextView
                    android:id="@+id/user_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03432507836"
                    android:layout_alignParentRight="true"
                    android:textSize="18dp"
                    android:layout_marginLeft="95dp"
                    android:layout_toEndOf="@+id/u5"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/u6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:id="@+id/user_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R-35/1 Sector 7-D-3"
                    android:textSize="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@+id/u6"
                    android:layout_marginLeft="78dp"
                    />
            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

</FrameLayout>
