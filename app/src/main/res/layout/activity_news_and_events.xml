<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/news_and_events_layout"
    tools:context="com.example.osamakhalid.schoolsystem.Activites.NewsAndEvents">


    <TextView
        android:id="@+id/news_and_events"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorPrimary"
        android:textColor="#ffff"
        android:text="News And Events"
        android:textSize="20sp"
        android:gravity="center"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/news_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_above="@id/copyrights_text"
        android:layout_below="@+id/news_and_events" />

    <TextView
        android:id="@+id/copyrights_text"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="CopyrightÂ©2018, SEE, All rights reserved."
        android:textColor="#fff" />

</RelativeLayout>

