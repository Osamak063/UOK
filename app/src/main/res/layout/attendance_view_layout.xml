<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#FFFFFFFF">

        <RelativeLayout
            android:id="@+id/examLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:id="@+id/attendance_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Fri,Sep 01 2017"
                android:layout_marginTop="15dp"
                android:textColor="#000"
                android:textSize="15dp" />

            <Button
                android:id="@+id/attendance_present"
                android:layout_marginRight="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textColor="#43A047"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/attendance_absent"
                android:background="@drawable/button_bg_stroke_present"
                android:text="P" />

            <Button
                android:id="@+id/attendance_absent"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:textColor="#E53935"
                android:layout_toLeftOf="@id/attendance_holiday"
                android:background="@drawable/button_bg_stroke_absent"
                android:text="A" />

            <Button
                android:id="@+id/attendance_holiday"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textColor="#039BE5"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_bg_stroke_holiday"
                android:text="H" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>




</LinearLayout>