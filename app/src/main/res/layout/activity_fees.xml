<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.osamakhalid.schoolsystem.Activites.Fees">


    <TextView
        android:id="@+id/examtext"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorPrimary"
        android:textColor="#ffff"
        android:text="Fees"
        android:textSize="20sp"
        android:gravity="center"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/duefees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/examtext"
        android:paddingBottom="15dp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/duefees"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/paymenttext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment History"
            android:paddingBottom="5dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="15dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/feeshistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/paymenttext"
            android:paddingBottom="15dp"
            />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="CopyrightÂ©2018, SEE, All rights reserved."
        android:textColor="#fff"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="531dp" />

</RelativeLayout>
