<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.osamakhalid.schoolsystem.Activites.Syllabus_Activity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/toolbar_layout"
            />


    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_syllabus_view"
        android:padding="3dp"
        android:layout_below="@id/appbar_Layout">


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/syllabus___spinner"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:visibility="gone">

        </Spinner>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_Spinner"
        android:layout_below="@+id/layout_syllabus_view">

        <Spinner
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:id="@+id/month___spinner"
            android:padding="5dp"
            android:layout_marginRight="5dp">

        </Spinner>

        <Spinner
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:id="@+id/year___spinner"
            android:padding="5dp"
            android:layout_marginRight="5dp">

        </Spinner>


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/syllabus_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_below="@+id/layout_Spinner">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
