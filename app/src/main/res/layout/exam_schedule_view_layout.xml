<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#FFFFFFFF">

        <LinearLayout
            android:id="@+id/examLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/exam_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exam: Final Exams"
                android:textColor="#000" />

            <TextView
                android:id="@+id/exam_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Class: One"
                android:textColor="#000" />

            <TextView
                android:id="@+id/exam_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subject: English"
                android:textColor="#000" />

            <TextView
                android:id="@+id/exam_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date: 23 Feb 2018"
                android:textColor="#000" />

            <TextView
                android:id="@+id/exam_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time: 12:45 PM - 12:45 PM"
                android:textColor="#000" />

            <TextView
                android:id="@+id/exam_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room: 1"
                android:textColor="#000" />
        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>